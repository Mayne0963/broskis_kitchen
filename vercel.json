{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "ignoreCommand": "rm -rf .next/cache",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/admin/**/route.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  }
}